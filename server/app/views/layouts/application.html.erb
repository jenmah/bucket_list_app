<!DOCTYPE html>
<html>
<head>
  <title>BucketListApp</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
  <link href='http://fonts.googleapis.com/css?family=Crimson+Text:400,400italic,600italic,600,700,700italic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.2.1/backbone-min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.1.2/mustache.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div id="app"></div>

<div id="bucketlist">
  <form action="#" id="add">
    <i class="fa fa-plus"></i>
    <input type="text" class="add-item" id="number" name="number" placeholder="enter bucket list number"/>
    <input type="text" class="add-item" id="description" name="description" placeholder="what do you want to do?"/>
    <input type="text" class="add-item" id="location" name="location" placeholder="enter a location?"/>
    <input type="submit" value="ADD"/>
  </form>

<div id="bucketlistItems" class="personal-bucketlist">  
</div>

</div>


<script type="text/x-underscore-template" id="list-item">
  <div id="bucketlist-box">
    <h2 class="number">{{ number }}</h2>
    <p class="description italic bold">{{ description }}</p>
    <p class="location italic bold">{{ location }}</p>
    <button class="edit button">EDIT <i class="fa fa-pencil"></i></button>
    <button class="remove button">REMOVE <i class="fa fa-trash-o"></i></button>
    <br>
    <input type="checkbox" class="completed"><h3>MARK AS COMPLETED</h3>
  </div>
</script>



<script type="text/x-underscore-template" id="application-template">
  <ul>
   <li><a href="#">Home</a></li>
   <li><a href="#bucketlists">Your Bucketlist</a></li>
   <li><a href="#books/new">New Book</a></li>
   <li id="user-menu"></li>
  {{# if(user.isLoggedIn()) { }}
    <li><a href="#users/sign_in">My Account({{ user.get("email") }})</a></li>
    <li><a href="#" id="sign-out">Sign out</a></li>
  {{# } else { }}
    <li><a href="#users/sign_in">Sign in</a></li>
    <li><a href="#users/sign_up">Sign up</a></li>
  {{# } }}
  {{ user.cid }}
  </ul>
</script>



<%#= yield %>
<header></header>
<main></main>

<script type="text/x-underscore-template" id="sign-up-template">
<div> 
  <div>
      <h2>Sign up</h2>
      <div class="alert hide">
        <ul></ul>
      </div>
      <div class="form-group  well">
        <div class="form-group">
          <label>Email address</label>
          <input class="form-control" type="text" name="email" placeholder="email"/>
      </div>
        <div class="form-group">
          <label>Password</label>
          <input class="form-control" type="password" name="password" placeholder="password" />
        </div>
        <div class="form-group">
          <label>Password confirmation</label>
          <input class="form-control" type="password" name="password_confirmation" placeholder="password confirmation" />
        </div>
        <div class="form-group">
          <button class="btn btn-default" id="signup">Sign up</button>
        </div>
      </div>
    </div>
  </div>
</script>


<script type="text/x-underscore-template" id="sign-in-template">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Sign in</h2>
      <div class="alert hide" role="alert">
        <ul></ul>
      </div>
      <div class="form-group  well">
        <div class="form-group">
          <label>Email address</label>
          <input class="form-control" type="text" name="email" placeholder="email"/>
  </div>
        <div class="form-group">
          <label>Password</label>
          <input class="form-control" type="password" name="password" placeholder="password"/>
        </div>
        <div class="form-group">
          <button class="btn btn-default" id="login">Sign in</button>
        </div>
      </div>
    </div>
  </div>
</script>






